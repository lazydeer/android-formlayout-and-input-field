<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新增门店" />

    <com.github.lazydeer.formlayout.FormLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:inputFieldBackground="@drawable/btn_white_round_bg_pressed"
        app:startDrawable="@drawable/wrong_tag"
        app:titleAreaWidth="90dp"
        app:titlePosition="centerRight"
        app:titleTextColor="@color/gray"
        app:titleTextSize="19sp"
        app:titleType="outsideLeft"
        app:validateNotNull="true">

        <com.github.lazydeer.formlayout.fields.InputField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="1233333"
            android:text="hello123"
            app:titlePosition="bottomRight"
            app:titleText="手机号:"
            app:validateErrorMessage="请输入正确的手机号"
            app:validateRegexString="^1(3[0-9]|5[0-35-9]|8[025-9])\\d{8}$" />


        <com.github.lazydeer.formlayout.fields.InputField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@android:color/white"
            android:focusable="false"
            android:hint="请输入用户名"
            app:titleText="昵称"
            app:titleToInputSpace="15dp" />


        <com.github.lazydeer.formlayout.fields.InputField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="hhhhhh"
            app:endDrawable="@drawable/wrong_tag"
            app:titlePosition="topRight"
            app:titleTagDrawable="@drawable/must_tag"
            app:titleText="身份证:" />


        <com.github.lazydeer.formlayout.fields.InputField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="hhhhhh"
            app:rightDrawableType="showClearTag"
            app:titleDrawable="@drawable/delete_tag"
            app:titleDrawablePosition="left"
            app:titlePosition="topLeft"
            app:titleTagDrawable="@drawable/must_tag"
            app:titleTagDrawablePosition="rightTop"
            app:titleText="学历:" />
    </com.github.lazydeer.formlayout.FormLayout>

    <com.github.lazydeer.formlayout.fields.InputField
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_white_round_bg_pressed"
        android:hint="hhhhhh"
        app:rightDrawableType="showClearTag"
        app:titleDrawable="@drawable/delete_tag"
        app:titlePosition="topLeft"
        app:titleText="学历:" />
</LinearLayout>